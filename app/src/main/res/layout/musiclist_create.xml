<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">
    <RelativeLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <com.example.musicplayer_hezhao.util.RoundImageView
            android:id="@+id/test_img"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic12"/>
        <TextView
            android:id="@+id/test_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/test_img"
            android:text="歌单管理"
            android:textColor="@color/drak"
            android:layout_marginTop="80dp"
            android:textSize="20dp"/>


    </RelativeLayout>
    <View
        android:layout_below="@+id/test"
        android:layout_width="match_parent"
        android:background="#F7F7F7"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/test2"
        android:gravity="center"
        android:textColor="@color/drak"
        android:layout_below="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="创建歌单"
        android:textSize="15dp"
        android:textStyle="normal"/>
    <View
        android:layout_below="@+id/test2"
        android:layout_width="match_parent"
        android:background="#F7F7F7"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/test3"
        android:gravity="center"
        android:layout_below="@+id/test2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="批量删除歌单"
        android:textSize="15dp"
        android:textColor="@color/drak"
        android:textStyle="normal"/>

    <View
        android:layout_below="@+id/test3"
        android:layout_width="match_parent"
        android:background="#F7F7F7"
        android:layout_height="12dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp"/>
</RelativeLayout>