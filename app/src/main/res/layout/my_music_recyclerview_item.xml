<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.example.musicplayer_hezhao.util.RoundImageView
        android:id="@+id/my_music_img"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="onClick"/>
    <TextView
        android:layout_toRightOf="@+id/my_music_img"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/drak"
        android:id="@+id/my_music_text"
        android:textStyle="bold"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textSize="12dp"
        android:onClick="onClick"/>
    <TextView
        android:id="@+id/my_music_number"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/my_music_img"
        android:layout_below="@+id/my_music_text"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="@color/drak"
        android:textSize="10dp"/>
</RelativeLayout>